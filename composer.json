{
    "name": "luan-tavares/global-vars",
    "license": "MIT",
    "description": "Simple global vars",
    "keywords": [
        "Global Vars"
    ],
    "type": "library",
    "authors": [
        {
            "name": "Luan Tavares Louren√ßo",
            "email": "luan.tavares.lourenco@gmail.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "LTL\\Global\\": "src/"
        },
        "files": []
    },
    "autoload-dev": {
        "psr-4": {
            "LTL\\Hubspot\\Tests\\": "tests/"
        }
    },
    "bin": [],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "larapack/dd": "1.*",
        "phpunit/phpunit": "^10",
        "illuminate/collections": "^9",
        "infection/infection": "^0",
        "luan-tavares/simple-deploy": "^1.0"
    },
    "scripts": {
        "deploy-tag": [
            "LTL\\Deploy\\DeployTag::execute"
        ],
        "deploy": [
            "LTL\\Deploy\\Deploy::execute"
        ]
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}